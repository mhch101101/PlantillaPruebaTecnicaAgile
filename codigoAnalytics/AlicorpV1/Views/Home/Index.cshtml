@{
	ViewData["Title"] = " Index";
}

<style type="text/css">
	.vc-border-gray-400 {
		border-color: #78B928 !important;
	}
</style>


<div id="mainIndex">
	<div class="jumbotron contenedor-header">
		<h1 class="titulo-contenedor">Mantenimiento</h1>
		<hr>
	</div>

	<section>
		<div class="row d-flex justify-content-center p-5">
			<div class="col-12 col-sm-4 col-md-3 py-4">
				<h2 class="font-weight-bold">Filtrar Proyecto</h2>
				<div class="border rounded my-2 px-4 py-4">
					<h4 class="font-weight-bold">Estado</h4>
					<div class="custom-control custom-checkbox">
						<input type="checkbox" class="custom-control-input" id="customCheck1">
						<label class="custom-control-label" for="customCheck1">Pendiente</label>
					</div>
					<div class="custom-control custom-checkbox">
						<input type="checkbox" class="custom-control-input" id="customCheck2">
						<label class="custom-control-label" for="customCheck2">En Proceso</label>
					</div>
					<div class="custom-control custom-checkbox">
						<input type="checkbox" class="custom-control-input" id="customCheck3">
						<label class="custom-control-label" for="customCheck3">Finalizado</label>
					</div>
				</div>
				<div class="border rounded my-2 px-4 py-4">
					<h4 class="font-weight-bold">Proyecto</h4>
					<label for="select1">Nombre:</label>
					<input type="text" class="form-control mb-2" id="select1" placeholder="Nombre Proyecto">
				</div>
				<button class="btn btn-success w-100 my-2">Nuevo Proyecto</button>
			</div>
			<div class="col-12 col-sm-8 col-md-9 py-4">
				<h2 class="font-weight-bold">Seguimiento del Proyecto</h2>
				<div class="border rounded my-2 px-4 py-3">
					<h4 class="font-weight-bold">Resumen</h4>
					<form>

						<div class="form-row align-items-center my-2">
							<label class="col-sm-12 col-md-2" for="input1">Proyecto:</label>
							<div class="col-sm-12 col-md-4">
								<input type="text" class="form-control mb-2" id="input1" placeholder="Proyecto">
							</div>
							<label class="col-sm-12 col-md-2" for="input2">Estados:</label>
							<div class="col-sm-12 col-md-4">
								<!-- <input type="text" class="form-control mb-2" id="input2" placeholder="Estados"> -->
								<select class="form-control" id="exampleFormControlSelect1">
									<option>-Seleccione-</option>
									<option>Pendiente</option>
									<option>En Proceso</option>
									<option>Finalizado</option>
								</select>
							</div>
						</div>

						<div class="form-row align-items-center my-2">
							<label class="col-sm-12 col-md-2" for="input3">Fecha Inicio:</label>
							<div class="col-sm-12 col-md-4">
								<input type="date" class="form-control mb-2" id="input3" placeholder="Fecha Inicio">
							</div>
							<label class="col-sm-12 col-md-2" for="input4">Fecha Fin:</label>
							<div class="col-sm-12 col-md-4">
								<input type="date" class="form-control mb-2" id="input4" placeholder="Fecha Fin">
							</div>
						</div>

						<div class="form-row align-items-center my-2">
							<label class="col-sm-12 col-md-2" for="input5">Responsable:</label>
							<div class="col-sm-12 col-md-4">
								<input type="text" class="form-control mb-2" id="input5" placeholder="Responsable">
							</div>
							<label class="col-sm-12 col-md-2" for="input6">Presupuesto:</label>
							<div class="col-sm-12 col-md-4">
								<input type="number" class="form-control mb-2" id="input6" placeholder="Presupuesto">
							</div>
						</div>

					</form>
				</div>

				<div class="border rounded my-2 px-4 py-3">
					<div class="d-flex align-items-center justify-content-between mt-2 mb-3">
						<h4 class="font-weight-bold">Actividades</h4>
						<a href="#" class="d-sm-inline-block btn btn-success shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Nueva Actividad</a>
					</div>

					<div class="table-responsive">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Descripción</th>
									<th scope="col">F. Entrega</th>
									<th scope="col">Estado</th>
									<th scope="col">Responsable</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<th scope="row">1</th>
									<td>Actividad #1</td>
									<td>24/06/2021</td>
									<td>Pendiente</td>
									<td>Mark Otto</td>
								</tr>
								<tr>
									<th scope="row">2</th>
									<td>Actividad #2</td>
									<td>12/05/2021</td>
									<td>En Proceso</td>
									<td>Jacob Thornton</td>
								</tr>
								<tr>
									<th scope="row">3</th>
									<td>Actividad #3</td>
									<td>20/03/2021</td>
									<td>Finalizado</td>
									<td>Larry Bird</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Modal -->
	<section>
		<partial name="Modal/Editar" />
	</section>

</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
